{
  "presets": ["env", "react"],
  "plugins": [
    [
      "react-css-modules", {
        "generateScopedName": "[local]--[hash:base64:5]",
        "filetypes": {
          ".scss": {
            "syntax": "postcss-scss"
          }
        }
      }
    ],
    "transform-decorators-legacy",
    "transform-class-properties",
    "transform-object-rest-spread",
    "transform-react-jsx",
    [
      "module-resolver", {
        "root": ["./"],
        "alias": {
          "@components": "./src/components",
          "@pages": "./src/pages",
          "@layout": "./src/layout"
        }
      }
    ]
  ]
}